<section id="hero" class="cabinet-distributor-banner"
{% if section.settings.banner %}
  style="background-image: url({{ section.settings.banner | img_url: 'original' }});"
{% endif %}>
  <div class="container">
    <div class="col-md-12 text-center">
      <h1>{{ page.title }}</h1>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Distributor Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "banner",
        "label": "Banner for Distributors"
      }
    ]
  }
{% endschema %}
