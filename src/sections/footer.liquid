{% assign street = shop.address.street | split: ',' %}
<footer>
  <div class="container">
    <div class="row">
      <div class="col-md-2 schema">
        <h3>Contact Us:</h3>
        <strong>{{ shop.name }}</strong>
        {% for line in street %}
          {{ line }}<br>
        {% endfor %}
          {{ shop.address.city }}, CA {{ shop.address.zip }}
        {% include 'click-to-call' %}
        <a href="mailto:{{ shop.email }}">{{ shop.email }}</a>
      </div>
      <div class="col-md-5 col-md-offset-1">
        <h3>Business Hours:</h3>
        {{ section.settings.hours }}
      </div>
      <div class="col-md-4 search-container">
        {% include 'search-form' %}
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        {%- assign social_accounts = 'Pinterest, Instagram, Facebook, Twitter, Snapchat, Tumblr, YouTube, Vimeo,' | split: ', ' -%}
        <ul class="social">
          {% for social in social_accounts %}
            {%- assign social_handle = social | handleize -%}
            {% capture social_link %}social_{{ social_handle }}_link{% endcapture %}
            {% capture social_icon %}icon-{{ social_handle }}{% endcapture %}

            {% if settings[social_link] != blank %}
              <li>
                <a href="{{ settings[social_link] }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: social }}">
                  {% include social_icon %}
                  <span class="icon-fallback-text">{{ social }}</span>
                </a>
              </li>
            {% endif %}

          {% endfor %}
        </ul>
      </div>
      <div class="col-md-9">
        <small>{{ 'layout.footer.copyright' | t }} &copy; {{ 'now' | date: "%Y" }} JTech Solutions Inc. &bull; <a href="{{ section.settings.privacy_link }}">{{ section.settings.privacy_text }}</a> &bull; <a href="{{ section.settings.terms_link }}" target="_blank">{{ section.settings.terms_text }}</a></small>
      </div>
    </div>
  </div>



