</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "textarea",
        "id": "address",
        "label": "Formatted Address"
      },
      {
        "type": "text",
        "id": "hours",
        "label": "Formatted Hours"
      },
      {
        "type": "url",
        "id": "privacy_link",
        "label": "Privacy Policy Link"
      },
      {
        "type": "text",
        "id": "privacy_text",
        "label": "Privacy Policy Link Text"
      },
      {
        "type": "url",
        "id": "terms_link",
        "label": "Terms & Conditions Link"
      },
      {
        "type": "text",
        "id": "terms_text",
        "label": "Terms & Conditions Text"
      },
      {
        "type": "link_list",
        "id": "footer_linklist",
        "label": "First menu",
        "default": "footer"
      },
      {
        "type": "checkbox",
        "id": "show_payment_icons",
        "label": "Show payment icons",
        "default": false
      }
    ]
  }

{% endschema %}
