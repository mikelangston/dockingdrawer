<section id="video-bg">
  <video autoplay loop>
    <source type="video/mp4" src="{{ section.settings.video_url }}"/>
  </video>
  <div class="banner">
    <div class="container">
      <div class="col-md-12 text-center">
        <h1>{{ section.settings.heading }}</h1>
      </div>
    </div>
  </div>
</section>
<style>
.banner h1{
  color: {{ section.settings.text_color }};
}
</style>
{% schema %}
  {
    "name": "Homepage Banner",
    "settings": [
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Banner Text"
      },
      {
        "type": "url",
        "id": "video_url",
        "label": "Video URL"
      }
    ],
    "presets": [
      {
        "name": "Homepage Banner",
        "category": "Homepage"
      }
    ]
  }
{% endschema %}
