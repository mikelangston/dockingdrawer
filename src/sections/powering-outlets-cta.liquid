<div class="grid" style="background-color: {{ section.settings.heading_bg }};
                  color: {{ section.settings.heading_color }}">
    <div class="grid_item">
      <h2>{{ section.settings.heading }}</h2>
        <a href="{{ section.settings.button_link }}" class="gray-btn">{{ section.settings.button_text}}</a>
    </div>
</div>

{% schema %}
  {
    "name": "More Outlets",
    "settings": [
      {
        "type": "color",
        "id": "heading_bg",
        "label": "Heading Background Color",
        "default": "#000"
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Heading Color",
        "default": "#fff"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ]
  }
{% endschema %}
