<section id="home-resources">
  <div class="container-fluid main-content">
    <div class="col-md-3">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.res_details }}</p>
    </div>
    {% for block in section.blocks %}
      <div class="col-md-3 library">
        <img src="{{ block.settings.icon | img_url: 'original' }}" />
        <h3>{{ block.settings.title }}</h3>
        <p>{{ block.settings.details }}</p>
        <a href="{{ block.settings.link_url }}" class="gray-btn">{{ block.settings.link_text }}</a>
      </div>
    {% endfor %}
  </div>
</section>
<style>
#home-resources{
  background: {{ section.settings.bg_color }};
}
#home-resources *{
  color: {{ section.settings.text_color }};
}
</style>

{% schema %}
  {
    "name": "Homepage Resources",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "textarea",
        "id": "res_details",
        "label": "Resource Details"
      }
    ],
    "blocks": [
      {
        "name": "Library",
        "type": "library_type",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Library Icon"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Library Title"
          },
          {
            "type": "textarea",
            "id": "details",
            "label": "Library Details"
          },
          {
            "type": "url",
            "id": "link_url",
            "label": "Link URL"
          },
          {
            "type": "text",
            "id": "link_text",
            "label": "Link Text"
          }
        ]
      }
    ]
  }
{% endschema %}
