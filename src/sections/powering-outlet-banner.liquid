<section id="hero" class="charging-outlets"
  {% if section.settings.banner_image %}
    style="background-image: url({{ section.settings.banner_image | img_url: 'original' }});"
  {% endif %}>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6 wht-gradient">
        <h1>{{ page.title }}</h1>
        <h2>{{ section.settings.banner_heading_2 }}</h2>
        <p>{{ section.settings.banner_paragraph_1 }}</p>
        <img src="{{ section.settings.banner_icons | img_url: 'original' }}" />
        <p>{{ section.settings.banner_paragraph_2 }}</p>
        <p>{{ section.settings.banner_paragraph_3 }}</p>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Charging Outlets Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "banner_image",
        "label": "Banner Image"
      },
      {
        "type": "text",
        "id": "banner_heading_2",
        "label": "Banner Sub Heading"
      },
      {
        "type": "textarea",
        "id": "banner_paragraph_1",
        "label": "Banner Paragraph 1"
      },
      {
        "type": "textarea",
        "id": "banner_paragraph_2",
        "label": "Banner Paragraph 2"
      },
      {
        "type": "textarea",
        "id": "banner_paragraph_3",
        "label": "Banner Paragraph 3"
      },
      {
        "type": "image_picker",
        "id": "banner_icons",
        "label": "Banner Icons"
      }
    ],
    "blocks": [

    ]
  }
{% endschema %}
